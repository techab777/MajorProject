<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_registration_background"
    android:gravity="center">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_org_address"
        android:hint="Enter Organization Address"
        android:textSize="18sp"
        android:textColor="#fff"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:textColorHint="#fff"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_org_info"
        android:hint="Enter Organization Information"
        android:textSize="18sp"
        android:textColor="#fff"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:textColorHint="#fff"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_info_black_24dp"
        />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_org_website"
        android:hint="Enter Organization Website"
        android:textSize="18sp"
        android:textColor="#fff"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:textColorHint="#fff"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_web_black_24dp"
        />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_org_license"
        android:hint="Enter Organization Shop License"
        android:textSize="18sp"
        android:textColor="#fff"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:textColorHint="#fff"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_attach_file_black_24dp"/>

</LinearLayout>