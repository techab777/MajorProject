<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    android:id="@+id/edu_item_cardview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/img_org_logo"
            android:layout_margin="10dp"
            android:scaleType="centerCrop" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_org_name"
            android:textSize="18sp"
            android:textColor="#454444"
            android:layout_toRightOf="@+id/img_org_logo"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_org_address"
            android:text="College"
            android:textSize="18sp"
            android:textColor="#454444"
            android:layout_toRightOf="@+id/img_org_logo"
            android:layout_below="@+id/txt_org_name"
            android:layout_marginTop="15dp"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_org"
            android:layout_below="@+id/txt_org_name"
            android:isIndicator="true"
            android:theme="@style/RatingBar"
            android:scaleX=".6"
            android:scaleY=".6"
            android:layout_marginTop="50dp"
           android:layout_marginLeft="140dp"
            android:rating="3.5"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>